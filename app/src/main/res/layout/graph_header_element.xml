<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="35dp"
    android:background="@color/space_grey">

    <TextView
        android:id="@+id/graph_header_element_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/sample"
        android:textColor="@color/beige"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/graph_header_element_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/graph_header_element_value"
        android:text="@string/sample"
        android:textSize="20sp"
        android:textColor="@color/beige"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/graph_header_element_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/graph_header_element_sample"
        android:text="@string/sample"
        android:textSize="20sp"
        android:textColor="@color/beige"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>