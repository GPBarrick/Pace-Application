<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentlayouts.HomeFragment">

    <!-- TODO: ViewPager2, ViewPager2, ImageView, ImageButton x 4, TabLayout, ViewPager2 -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_card_viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/home_beige_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.45"/>

        <ImageView
            android:id="@+id/home_beige_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/beige"
            app:layout_constraintHeight_percent="0.55"/>

        <ImageView
            android:id="@+id/home_tools_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/tools_background"
            android:elevation="15dp"
            app:layout_constraintBottom_toTopOf="@id/home_beige_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_card_viewPager"
            app:layout_constraintVertical_bias="0.33" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/home_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_tools_background"
            android:layout_marginTop="20dp"
            android:background="@color/beige"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_list_viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_tabLayout"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/home_modifyList_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintStart_toStartOf="@+id/home_tools_background"
            app:layout_constraintTop_toTopOf="@+id/home_tools_background"
            app:layout_constraintBottom_toBottomOf="@+id/home_tools_background"
            android:elevation="15dp"
            android:background="@drawable/wrench_icon"
            android:layout_marginStart="25dp"/>

        <ImageButton
            android:id="@+id/home_deleteList_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/red_x_icon"
            android:elevation="15dp"
            app:layout_constraintBottom_toBottomOf="@id/home_tools_background"
            app:layout_constraintStart_toEndOf="@+id/home_modifyList_button"
            app:layout_constraintTop_toTopOf="@id/home_tools_background"/>

        <ImageButton
            android:id="@+id/home_settings_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@id/home_tools_background"
            app:layout_constraintStart_toEndOf="@id/home_deleteList_button"
            app:layout_constraintTop_toTopOf="@id/home_tools_background"
            android:layout_marginStart="25dp"
            android:elevation="15dp"
            android:background="@drawable/gear_icon"/>

        <ImageButton
            android:id="@+id/home_menu_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@id/home_tools_background"
            app:layout_constraintStart_toEndOf="@id/home_settings_button"
            app:layout_constraintTop_toTopOf="@id/home_tools_background"
            android:layout_marginStart="25dp"
            android:elevation="15dp"
            android:background="@drawable/grid_icon"/>




        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/forest"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_tabLayout"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>