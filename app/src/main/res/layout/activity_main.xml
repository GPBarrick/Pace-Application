<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
        android:id="@+id/activity_main_header_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/forest"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main_welcome"
        android:layout_marginBottom="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_main_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        android:text="@string/sample"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/activity_main_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_display_name"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:text="@string/welcome_message"
        android:textSize="25sp"
        android:textColor="@color/white"/>
    
    <ImageButton
        android:id="@+id/activity_main_notification_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="30dp"
        android:background="@drawable/notifications_icon"/>
    
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/activity_main_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_header_background"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_tabLayout"
        android:background="@color/forest"/>
    
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/activity_main_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/beige"/>

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/forest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_main_tabLayout"
        android:layout_marginTop="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

