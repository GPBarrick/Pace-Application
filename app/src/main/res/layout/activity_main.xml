<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <!-- TODO: ImageView, TextView, TextView, ImageButton -->
        <FrameLayout
            android:id="@+id/activity_main_top"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="@color/forest"
            >

            <TextView
                android:id="@+id/activity_main_top_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="Hi, Josh"
                android:textSize="23dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/activity_main_welcome_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="50dp"
                android:text="Welcome Back"
                android:textSize="30dp"
                android:textColor="@color/white"/>

        </FrameLayout>

        <!-- TODO: ViewPager2 -->

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/notifications_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            />



        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/activity_main_viewPager"
            android:background="@color/forest"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_below="@+id/activity_main_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- TODO: TabLayout -->
        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/activity_main_viewPager"/>






    </RelativeLayout>

