<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="inputDataBinding"
            type="com.example.pace.databinding.ClientInputDataBinding" />
    </data>
    
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/client_input_frameLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/client_input_beige_background"
                app:layout_constraintHeight_percent="0.45"
                android:background="@color/forest"/>

            <ImageView
                android:id="@+id/client_input_beige_background"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/beige"
                app:layout_constraintHeight_percent="0.55"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/client_input_tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/client_input_beige_background"
                android:layout_marginTop="20dp"
                android:background="@color/beige"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/client_input_viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/client_input_tabLayout"
                app:layout_constraintBottom_toTopOf="@+id/client_input_calendar_editText"
                android:layout_marginBottom="100dp"/>

            <ImageButton
                android:id="@+id/client_input_calendar_button"
                android:onClick="@{inputDataBinding::onCalendarButtonClick}"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/calendar_icon"
                app:layout_constraintStart_toEndOf="@+id/client_input_calendar_editText"
                app:layout_constraintTop_toTopOf="@+id/client_input_calendar_editText"
                android:layout_marginStart="25dp"/>

            <EditText
                android:id="@+id/client_input_calendar_editText"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/edit_text_background"
                android:hint="@string/date_hint"
                android:textColorHint="@color/beige"
                android:textColor="@color/beige"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/client_input_errorIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                app:layout_constraintStart_toStartOf="@+id/client_input_calendar_editText"
                app:layout_constraintBottom_toTopOf="@+id/client_input_calendar_editText"
                android:layout_marginStart="-15dp"
                android:background="@drawable/red_x_icon"
                android:layout_marginBottom="-5dp"/>
            
            <CalendarView
                android:id="@+id/client_input_calendarView"
                android:onSelectedDayChange="@{inputDataBinding::getCalendarData}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/client_input_calendar_editText"
                android:background="@color/beige"
                android:theme="@style/CalenderViewCustom"
                android:dateTextAppearance="@style/CalenderViewDateCustomText"
                android:weekDayTextAppearance="@style/CalenderViewWeekCustomText"
                android:layout_marginBottom="25dp"
                android:visibility="invisible"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/forest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/client_input_tabLayout"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/forest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/client_input_viewPager"
                android:layout_marginTop="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>