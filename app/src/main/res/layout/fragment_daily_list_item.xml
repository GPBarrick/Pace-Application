<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".graphutil.graphutilfragments.DailyListItemFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/forest"
        tools:context=".graphutil.DailyListItem">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:layout_constraintEnd_toEndOf="@+id/daily_list_item_returnButton"
            app:layout_constraintBottom_toBottomOf="@+id/daily_list_item_returnButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="-15dp"
            android:layout_marginTop="-15dp"
            android:background="@drawable/accent_circle_shape"
            android:elevation="15dp"/>

        <ImageButton
            android:id="@+id/daily_list_item_returnButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintStart_toStartOf="@+id/daily_list_item_cardHeader"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="-15dp"
            android:background="@drawable/green_arrow_icon_left"
            android:elevation="15dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/daily_list_item_cardHeader"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/daily_list_item_returnButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/daily_list_item_accentBackground"
            app:cardBackgroundColor="@color/space_grey"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="35dp"
            app:cardCornerRadius="15dp"/>

        <TextView
            android:id="@+id/daily_list_item_mainDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/daily_list_item_cardHeader"
            app:layout_constraintTop_toTopOf="@+id/daily_list_item_cardHeader"
            app:layout_constraintEnd_toEndOf="@+id/daily_list_item_cardHeader"
            android:gravity="center"
            android:text="@string/sample"
            android:textColor="@color/beige"
            android:textSize="32sp"
            android:elevation="10dp"
            android:layout_marginTop="5dp"/>

        <View
            android:id="@+id/daily_list_item_cardSeparator1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/beige"
            android:elevation="15dp"
            app:layout_constraintTop_toBottomOf="@+id/daily_list_item_mainDateText"
            app:layout_constraintStart_toStartOf="@+id/daily_list_item_cardHeader"
            app:layout_constraintEnd_toEndOf="@+id/daily_list_item_cardHeader"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/daily_list_item_headerInfo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/daily_list_item_cardSeparator1"
            app:layout_constraintStart_toStartOf="@+id/daily_list_item_cardHeader"
            app:layout_constraintEnd_toEndOf="@+id/daily_list_item_cardHeader"
            app:layout_constraintBottom_toBottomOf="@+id/daily_list_item_cardHeader"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:elevation="20dp"/>

        <ImageView
            android:id="@+id/daily_list_item_accentBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/beige"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.54" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/daily_list_item_viewPager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/daily_list_item_accentBackground"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>